# https://git-scm.com/docs/git-config
[include]
  path = ~/.gitconfig.local
[user]
  name = Alex Young
[alias]
  # Working
  a = !git add -N . && git add -p
  c = commit
  back = reset --soft HEAD~
  undo = reset --hard HEAD~
  clear = reset --hard HEAD
  save = !git reset && git a && git c
  fixup = !git a && git c --amend
  wip = !git a && git c -m "wip"
  store = !git a && git stash
  untrack = rm --cache --

  # Checkout
  co = checkout
  cob = checkout -b

  # Diff
  d = !git add -N && git diff
  dsg = diff --staged
  odm = !git fo && git diff origin/master HEAD

  # Rebase
  rb = rebase
  rbi = rebase -i
  rbm = !git fo && git rebase origin/master
  rbmi = !git fo && git rebase -i origin/master
  rbc = !git a && git rebase --continue

  # Remote
  p = push
  force = push --force
  fo = fetch origin --tags
  publish = !git brn | xargs git push --set-upstream origin

  # Info
  st = status
  last = show HEAD
  brn = rev-parse --abbrev-ref HEAD
  tree = log --graph --date=relative --pretty=tree
  stat = !git --no-pager diff --stat && git --no-pager diff --numstat
  lol = log --oneline
  lgd = !git lol --pretty=diff $(git lol | fzf | cut -d' ' -f1)..HEAD | sed -e 's/^/- /'
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
[fetch]
  prune = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[help]
  autocorrect = 1
[merge]
  ff = only
[pager]
  diff = diff-so-fancy | less --tabs=2 -RFX
  show = diff-so-fancy | less --tabs=2 -RFX
[pull]
  rebase = true
  ff = only
[push]
  followTags = true
  current = true
[pretty]
  tree = "%Cgreen%h%Creset -%C(auto)%d%Creset %s %Cblue(%an %ad)%Creset"
  diff = "[%h] %s (%aN)"
[rebase]
  autoStash = true
  stat = true
[rerere]
  enabled = true
  autoUpdate = true
[stash]
  showStat = false
[status]
  showStash = true
  showUntrackedFiles = all
[tag]
  # Sort tags as version numbers whenever applicable, so 1.10.2 is AFTER 1.2.0.
  sort = version:refname

