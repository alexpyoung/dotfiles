#!/usr/bin/env bash

set -euo pipefail

main() {
    local -r DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd)"
    pushd "$DIR" > /dev/null
    pbcopy < ../../crontab
    popd >/dev/null
    echo "crontab has been loaded into clipboard; paste and save."
    read -r -n 1 -p "Press any key to continue: "
    crontab -e
}

main

