#!/usr/bin/env bash

set -euo pipefail

main() {
    local -r ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd)/.."
    pushd $ROOT_DIR > /dev/null
    file bin/**/* | grep executable | cut -d: -f1 | xargs shellcheck
    shellcheck --shell=bash .aliases .exports .functions
    popd > /dev/null
}

main
