#!/usr/bin/env osascript

tell application "System Preferences"
	activate
	set current pane to pane id "com.apple.preference.network"
	delay 1

	tell application "System Events"
		tell group 1 of window "Network" of process "System Preferences"
			click button "Turn Wi-Fi Off"
			click button "Turn Wi-Fi On"
		end tell
	end tell
	quit
end tell
